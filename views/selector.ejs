<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Selection</title>
</head>
<body>
    <%- include('partials/sidebar'); %>
    <div id="main"> 
        <h1><%= folder %></h1>
        <div id="chc">
            <% files.forEach(function(file){ %>
                <a href=<%=`/viewer?file=${folder}_${(file.split("."))[0]}`%>> <%= (file.split("."))[0] %></a> 
            <% }); %>
        </div>
    </div>
    <div id="ads"></div>
    <style>
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
            /* width: 99%; */
        }
        #main {
            padding: 15px;
            width: 80%;
            text-align: left;
        }
        #ads {
            width: 10%;
        }
        #chc {
            display: flex;
            flex-wrap:wrap;
        }
        #chc a {
            text-align: center;
            width: 20%;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            margin: 10px;
            height: 80px;
            background-color: rgba(128, 127, 127, 0.5);
        }
    </style>
</body>
</html>